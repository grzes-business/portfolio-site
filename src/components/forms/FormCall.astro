---
// Cal.com integration for scheduling
---

<div class="pt-6 text-center">
    <h4 class="text-lg font-medium mb-4">Schedule a Call</h4>
    <p class="text-zinc-400 mb-8">Let's have a chat about whatever you need :D.</p>
    
    <!-- Cal.com Button -->
    <button
      data-cal-link="grzes-business"
      data-cal-namespace=""
      data-cal-config='{"layout":"month_view"}'
      class="w-full py-3 bg-gradient-to-r from-blue-500 to-purple-500 rounded-lg font-medium hover:opacity-90 transition-opacity"
    >
      View Available Times
    </button>
    
    <script type="text/javascript">
      (function (C, A, L) {
        let p = function (a, ar) {
          a.q.push(ar);
        };
        let d = C.document;
        C.Cal =
          C.Cal ||
          function () {
            let cal = C.Cal;
            let ar = arguments;
            if (!cal.loaded) {
              cal.ns = {};
              cal.q = cal.q || [];
              d.head.appendChild(d.createElement("script")).src = A;
              cal.loaded = true;
            }
            if (ar[0] === L) {
              const api = function () {
                p(api, arguments);
              };
              const namespace = ar[1];
              api.q = api.q || [];
              typeof namespace === "string"
                ? (cal.ns[namespace] = api) && p(api, ar)
                : p(cal, ar);
              return;
            }
            p(cal, ar);
          };
      })(window, "https://app.cal.com/embed/embed.js", "init");
      Cal("init");
    </script>
  </div>